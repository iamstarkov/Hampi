+block('IndexPage')
	.content-wrap.content-wrap_type_index.clearfix.is-hidden.i-smoothness
		
		+block('Posts')

			+block('Text')
				//- текстовая рамка
				.post-preview.preview-post_visual-state_text(id="post{PostID}", class=post_class)
					a.post-preview__link(href="{Permalink}")
						+block('Title')
							.post-preview__title: {Title}



			+block('Photo')
				//- наложение
				.post-preview.preview-post_visual-state_overlay(id="post{PostID}", class=post_class)
					a.post-preview__link(href="{Permalink}")
						img.post-preview__img(alt="", src="{PhotoURL-400}", width="{PhotoWidth-400}", height="{PhotoHeight-400}")
						+block('Caption')
							.post-preview__title: {Caption}

			+block('Photoset')
				//- наложение
				.post-preview.preview-post_visual-state_overlay(id="post{PostID}", class=post_class)
					a.post-preview__link(href="{Permalink}")
						+block('Photos')
							script.
								pasteFirstImg("{PostId}", "{PhotoURL-400}", "{PhotoWidth-400}", "{PhotoHeight-400}");
						+block('Caption')
							.post-preview__title: {Caption}

			+block('Panorama')
				//- наложение
				.post-preview.preview-post_visual-state_overlay(id="post{PostID}", class=post_class)
					a.post-preview__link(href="{Permalink}")
						+block('LinkOpenTag')
							img(src="{PhotoURL-Panorama}", alt="{PhotoAlt}", width="{PhotoWidth-400}", height="{PhotoHeight-400}")
						+block('Caption')
							.post-preview__title: {Caption}


			+block('Quote')
				//- текстовая рамка
				.post-preview.preview-post_visual-state_text(id="post{PostID}", class=post_class)
					a.post-preview__link(href="{Permalink}")
						.post-preview__desc
							| {Quote}

			+block('Link')
				//- текстовая рамка
				.post-preview.preview-post_visual-state_text(id="post{PostID}", class=post_class)
					a.post-preview__link(href="{URL}")
						.post-preview__title: {Name}
						+block('Description')
							.post-preview__desc
								| {Description}

			+block('Chat')
				//- текстовая рамка
				.post-preview.preview-post_visual-state_text(id="post{PostID}", class=post_class)
					a.post-preview__link(href="{Permalink}")
						+block('Title')
							.post-preview__title: {Title}

			+block('Audio')
				//- ифрейм
				.post-preview.preview-post_visual-state_iframe(id="post{PostID}", class=post_class)
					div.post-preview__link
						+block('AudioEmbed')
							| {AudioEmbed-400}

			+block('Video')
				//- ифрейм
				.post-preview.preview-post_visual-state_iframe(id="post{PostID}", class=post_class)
					a.post-preview__link(href="{Permalink}")
						| {VideoEmbed-400}
						+block('Caption')
							.post-preview__title: {Caption}

			+block('Answer')
				//- текстовая рамка
				.post-preview.preview-post_visual-state_text(id="post{PostID}", class=post_class)
					a.post-preview__link(href="{Permalink}")
						.post-preview__desc
							| {Question}
	.content-wrap
		include helpers/blocks/pagination