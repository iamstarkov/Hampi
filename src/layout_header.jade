header.header.clearfix

	+block('IndexPage')
		h1.logo(title="{Title}")
			+block('ifLogoImage')
				img(src="{image:Logo}").logo.logo_img
			+block('ifNotImageLogo')
				| {Title}
	+block('PermalinkPage')
		a.logo(href="/", title="{Title}")
			+block('ifLogoImage')
				img(src="{image:Logo}").logo.logo_img.logo_size_small
			+block('ifNotImageLogo')
				| {Title}


	+block('HasPages')
		.menu.i-non-select.clearfix.imenu
			div.menu__toggler.imenu__toggler
			ul.menu__list.unstyled.i-smoothness.clearfix
				+block('Pages')
					li.menu__item
						a.menu__link(href="{URL}", title="{Label}")
							| {Label}