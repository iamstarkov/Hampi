header.header.clearfix

	:b('IndexPage')
		h1.logo(title="{Title}")
			img(src="img/logo.png").logo.logo_img
	if tumblr_markup
		:b('PermalinkPage')
			a.logo(href="/", title="{Title}")
				img(src="img/logo.png").logo.logo_img


	:b('HasPages')
		.menu__wrap.i-non-select.clearfix
			input#menu-toggler.hidden.menu__toggler-checkbox(type="checkbox")
			label.menu__toggler(for="menu-toggler")
			ul.menu__list.unstyled.i-smoothness.clearfix
				unless tumblr_markup
					li.menu__item
						a.menu__link(href="#") Contact
					li.menu__item
						a.menu__link(href="#") Monika
					li.menu__item
						a.menu__link(href="#") Twitter
					li.menu__item
						a.menu__link(href="#") Search
				:b('Pages')
					li.menu__item
						a.menu__link(href="{URL}", title="{Label}")
							| {Label}