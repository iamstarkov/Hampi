:b('IndexPage')
	.cells-wrap.clearfix.is-hidden.i-smoothness
		:b('Posts')

			:b('Text')
				.cell(id="post{PostID}", class=post_class)
					.post-preview.post-preview_type_text.post-preview_type_green
						a.post-preview__link(href="{Permalink}")
							:b('Title')
								.post-preview__title: {Title}
							:Tags

			:b('Photo')
				.cell(id="post{PostID}", class=post_class)
					.post-preview.post-preview_type_img
						a.post-preview__link(href="{Permalink}")
							img.post-preview__img(alt="", src="{PhotoURL-400}", width="{PhotoWidth-400}", height="{PhotoHeight-400}")
							:b(Caption)
								.post-preview__title: {Caption}
							:Tags

			:b('Panorama')
				.cell(id="post{PostID}", class=post_class)
					.post-preview.post-preview_type_img
						a.post-preview__link(href="{Permalink}")
							:b('LinkOpenTag')
								img(src="{PhotoURL-Panorama}", alt="{PhotoAlt}", width="{PhotoWidth-400}", height="{PhotoHeight-400}")
							:b(Caption)
								.post-preview__title: {Caption}
							:Tags

			:b('Photoset')
				.cell(id="post{PostID}", class=post_class)
					.post-preview.post-preview_type_img
						a.post-preview__link(href="{Permalink}")
							:b('Photos')
								script.
									pasteFirstImg("{PostId}", "{PhotoURL-400}", "{PhotoWidth-400}", "{PhotoHeight-400}");
							:b(Caption)
								.post-preview__title: {Caption}
							:Tags

			:b('Quote')
				.cell(id="post{PostID}", class=post_class)
					.post-preview.post-preview_type_text.post-preview_type_green
						a.post-preview__link(href="{Permalink}")
							.post-preview__desc
								| {Quote}
							:Tags

			:b('Link')
				.cell(id="post{PostID}", class=post_class)
					.post-preview.post-preview_type_text.post-preview_type_green
						a.post-preview__link(href="{URL}")
							.post-preview__title: {Name}
							:b('Description')
								.post-preview__desc
									| {Description}
							:Tags

			:b('Chat')
				.cell(id="post{PostID}", class=post_class)
					.post-preview.post-preview_type_text.post-preview_type_green
						a.post-preview__link(href="{Permalink}")
							:b('Title')
								.post-preview__title: {Title}
							:Tags

			:b('Audio')
				.cell(id="post{PostID}", class=post_class)
					.post-preview.post-preview_type_text
						div.post-preview__link
							:b('AudioEmbed')
								| {AudioEmbed-400}
							:Tags

			:b('Video')
				.cell(id="post{PostID}", class=post_class)
					.post-preview.post-preview_type_text
						a.post-preview__link(href="{Permalink}")
							| {VideoEmbed-400}
							:b(Caption)
								.post-preview__title: {Caption}
							:Tags

			:b('Answer')
				.cell(id="post{PostID}", class=post_class)
					.post-preview.post-preview_type_text
						a.post-preview__link(href="{Permalink}")
							.post-preview__desc
								| {Question}
							:Tags
