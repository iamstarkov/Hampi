+block('PermalinkPage')

	.content-wrap.clearfix

		+block('Posts')

			+block('Text')
				.post
					.post__content-wrap
						include helpers/blocks/Date
						+block('Title')
							.post_title: {Title}
						.post__desc
							| {Body}
						include helpers/blocks/Tags

			+block('Photo')
				.post
					.post__content-wrap
						include helpers/blocks/Date
						+block('Caption')
							.post__title: {Caption}
						include helpers/blocks/Tags
					.post__images-wrap
						img.post-preview__img(alt="", src="{PhotoURL-500}", width="{PhotoWidth-400}", height="{PhotoHeight-400}")

			+block('Panorama')
				.post
					.post__content-wrap
						include helpers/blocks/Date
						+block('Caption')
							.post__title: {Caption}
						include helpers/blocks/Tags
					+block('LinkOpenTag')
						.post__images-wrap
							img.post__image(src="{PhotoURL-Panorama}", alt="{PhotoAlt}", width="{PhotoWidth-400}", height="{PhotoHeight-400}")

			+block('Photoset')
				.post
					.post__content-wrap
						include helpers/blocks/Date
						+block('Caption')
							.post__title: {Caption}
						include helpers/blocks/Tags
					.post__images-wrap.is-hidden.i-smoothness
						+block('Photos')
							img.post__image(alt="", src="{PhotoURL-500}", width="{PhotoWidth-400}", height="{PhotoHeight-400}")

			+block('Quote')
				.post
					.post__content-wrap
						include helpers/blocks/Date
						.post__desc
							| {Quote}
						include helpers/blocks/Tags

			+block('Link')
				.post
					.post__content-wrap
						include helpers/blocks/Date
						.post__title
							| {Name}
						+block('Description')
							.post__desc
								| {Description}
						include helpers/blocks/Tags

			+block('Chat')
				.post
					.post__content-wrap
						include helpers/blocks/Date
						+block('Title')
							.post_title: {Title}
						include helpers/blocks/Tags
					.post__images-wrap
						ul.unstyled
							+block('Lines')
								li.unstyle
									+block('Label')
										b: {Label} 
									| {Line}

			+block('Audio')
				.post
					.post__content-wrap
						include helpers/blocks/Date
						+block('Caption')
							.post__title: {Caption}
						include helpers/blocks/Tags
					+block('AudioEmbed')
						.post__images-wrap
							| {AudioEmbed-400}

			+block('Video')
				.post
					.post__content-wrap
						include helpers/blocks/Date
						+block('Caption')
							.post__title: {Caption}
						include helpers/blocks/Tags
					.post__images-wrap
						| {VideoEmbed-400}

			+block('Answer')
				.post
					.post__content-wrap
						include helpers/blocks/Date
						.post__desc
							| {Question}
						include helpers/blocks/Tags
					.post__images-wrap
						b: {Question}
						hr
						| {Answer}